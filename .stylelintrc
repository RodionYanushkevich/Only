{
  "extends": "stylelint-config-htmlacademy",
  "overrides": [
    {
      "files": [
        "**/*.scss"
      ],
      "customSyntax": "postcss-scss",
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "function",
              "mixin",
              "include",
              "return"
            ]
          }
        ]
      }
    }
  ],
  "rules": {
    "declaration-no-important": true,
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "size",
          "size-desktop"
        ]
      }
    ]
  }
}
