mixin adaptivePicture(options = {})
  - const imageBaseName = options.imageBaseName || '';
  - const path = options.path || '';
  - const width = options.width;
  - const height = options.height;
  - const alt = options.alt || '';
  - const disableMobile = options.disableMobile || false;

  picture
    //- 1440px
    source(
      srcset=`img/${path}/${imageBaseName}-desktop-1440.webp 1x, img/${path}/${imageBaseName}-desktop-1440@2x.webp 2x`,
      media="(min-width: 1440px) and (max-width: 1919px)",
      type="image/webp",
      width=options.desktop1440Width || width,
      height=options.desktop1440Height || height
    )

    //- 1280px
    source(
      srcset=`img/${path}/${imageBaseName}-desktop-1280.webp 1x, img/${path}/${imageBaseName}-desktop-1280@2x.webp 2x`,
      media="(min-width: 1280px) and (max-width: 1439px)",
      type="image/webp",
      width=options.desktop1280Width || width,
      height=options.desktop1280Height || height
    )

    //- 768px
    source(
      srcset=`img/${path}/${imageBaseName}-tablet.webp 1x, img/${path}/${imageBaseName}-tablet@2x.webp 2x`,
      media="(min-width: 768px) and (max-width: 1279px)",
      type="image/webp",
      width=options.tabletWidth || width,
      height=options.tabletHeight || height
    )

    //- 375px
    if !disableMobile
      source(
        srcset=`img/${path}/${imageBaseName}-mobile.webp 1x, img/${path}/${imageBaseName}-mobile@2x.webp 2x`,
        media="(max-width: 767px)",
        type="image/webp",
        width=options.mobileWidth || width,
        height=options.mobileHeight || height
      )

    img(
      src=`img/${path}/${imageBaseName}-desktop-1920.webp`,
      srcset=`img/${path}/${imageBaseName}-desktop-1920.webp 1x, img/${path}/${imageBaseName}-desktop-1920@2x.webp 2x`,
      alt=alt,
      loading="lazy",
      width=width,
      height=height,
    )
